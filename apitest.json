  "item": [
    {
      "name": "get-post",
      "event": [
        {
          "listen": "prerequest",
          "script": {
            "exec": [
              ""
            ],
            "type": "text/javascript",
            "packages": {},
            "requests": {}
          }
        },
        {
          "listen": "test",
          "script": {
            "exec": [
              "// 1. 상태 코드 확인 (가장 기본)",
              "pm.test(\"상태 코드가 200인지 확인\", function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "// 2. 응답 본문(JSON) 데이터 검증",
              "pm.test(\"제목에 특정 단어가 포함되었는지 확인\", function () {",
              "    var jsonData = pm.response.json(); // 파이썬의 response.json()과 같습니다.",
              "    pm.expect(jsonData.title).to.include(\"aut\");",
              "});"
            ],
            "type": "text/javascript",
            "packages": {},
            "requests": {}
          }
        }
      ],
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{EX_BASE_URL}}/posts?id=1",
          "host": [
            "{{EX_BASE_URL}}"
          ],
          "path": [
            "posts"
          ],
          "query": [
            {
              "key": "id",
              "value": "1",
              "type": "text"
            }
          ]
        }
      },
      "response": []
    },
    {
      "name": "create-post",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Successful POST request\", function () {",
              "    pm.expect(pm.response.code).to.be.oneOf([201, 202]);",
              "});",
              "",
              "const returnData = pm.response.json();",
              "",
              "// 응답 데이터가 객체인지 확인",
              "pm.test(\"데이터가 비어있지 않은지 확인\", function () {",
              "    pm.expect(returnData).to.be.an('object').that.is.not.empty;",
              "});",
              "",
              "console.log(\"등록 글 json:\", returnData);",
              "",
              "// 응답에서 id가 존재하는지 확인",
              "pm.test(\"id 필드가 포함되어 있는지 확인\", function () {",
              "    pm.expect(returnData.id).to.exist;",
              "    pm.expect(returnData.id).to.be.a('number');",
              "});",
              "",
              "console.log(\"생성된 게시글 ID:\", returnData.id);"
            ],
            "type": "text/javascript",
            "packages": {},
            "requests": {}
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [],
        "body": {
          "mode": "raw",
          "raw": " {\n            \"title\": \"foo12\",\n            \"body\": \"bar32\",\n            \"userId\": 1\n        }\n",
          "options": {
            "raw": {
              "language": "json"
            }
          }
        },
        "url": {
          "raw": "{{EX_BASE_URL}}/posts",
          "host": [
            "{{EX_BASE_URL}}"
          ],
          "path": [
            "posts"
          ],
          "query": [
            {
              "key": "title",
              "value": "foo12",
              "disabled": true
            },
            {
              "key": "body",
              "value": "body12",
              "disabled": true
            },
            {
              "key": "userId",
              "value": "1",
              "disabled": true
            }
          ]
        }
      },
      "response": []
    }
  ]
